<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<?import java.net.URL?>
<AnchorPane id="mainPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.frontController">
    <AnchorPane prefHeight="423.0" prefWidth="704.0">
        <children>
            <Label layoutX="50.0" layoutY="115.0" text="Name:" />
            <TextField fx:id="abonnementName" layoutX="110.0" layoutY="110.0" styleClass="text-field" />


            <Label layoutX="370.0" layoutY="125.0" text="Email:" />
            <TextField fx:id="abonnementEmail" layoutX="431.0" layoutY="120.0" prefHeight="30.0" prefWidth="138.0" styleClass="text-field" />

            <Label layoutX="55.0" layoutY="185.0" text="Salle:" />
