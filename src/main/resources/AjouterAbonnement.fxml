                    <Label style="-fx-font-size: 12px; -fx-text-fill: white" text="Supprimer" />
                </graphic>
            </Button>
            <Button fx:id="refreshBtn" layoutX="1076.0" layoutY="411.0" mnemonicParsing="false" onAction="#refreshTable" styleClass="button" text="Refresh Table">
