            <Button fx:id="effectuerButton" layoutX="474.0" layoutY="334.0" mnemonicParsing="false" text="Submit" onAction="#effectuerAction" />
        </children>
    </AnchorPane>

    <stylesheets>
        <URL value="@front.css" />
    </stylesheets>
</AnchorPane>