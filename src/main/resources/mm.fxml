<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.clientController">

    <VBox alignment="CENTER" spacing="10">
        <!-- Title -->
        <Label text="Select an Offer" />

        <!-- GridPane for Offers -->
        <GridPane hgap="10" vgap="10">
            <!-- Offer 1 -->
            <HBox GridPane.columnIndex="0" GridPane.rowIndex="0">
                <Label text="Offer 1" />
                <!-- Add other details here -->
                <Button text="Select" />
            </HBox>

            <!-- Offer 2 -->
            <HBox GridPane.columnIndex="1" GridPane.rowIndex="0">
                <Label text="Offer 2" />
                <!-- Add other details here -->
                <Button text="Select" />
            </HBox>

            <!-- Add more offers as needed -->
        </GridPane>

        <!-- Continue Button -->
        <Button text="Continue" onAction="#navigateToAbonnementInterface" />
    </VBox>

</AnchorPane>
